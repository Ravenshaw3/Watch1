# Watch1 Media Server Environment Configuration

# Application
APP_NAME=Watch1 Media Server
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://watch1:watch1_password@localhost:5432/watch1
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_HOSTS=localhost,127.0.0.1

# Media Storage
MEDIA_ROOT=/app/media
THUMBNAILS_ROOT=/app/thumbnails
TRANSCODED_ROOT=/app/transcoded
MAX_FILE_SIZE=10737418240

# Supported Media Formats
SUPPORTED_VIDEO_FORMATS=.mp4,.avi,.mkv,.mov,.wmv,.flv,.webm,.m4v
SUPPORTED_AUDIO_FORMATS=.mp3,.wav,.flac,.aac,.ogg,.m4a,.wma
SUPPORTED_IMAGE_FORMATS=.jpg,.jpeg,.png,.gif,.bmp,.webp,.tiff

# FFmpeg Settings
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe
THUMBNAIL_SIZE=320,180
THUMBNAIL_QUALITY=85
TRANSCODE_QUALITY=medium
TRANSCODE_FORMAT=mp4

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache
CACHE_TTL=3600

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Frontend
VITE_API_URL=http://localhost:8000/api/v1
VITE_APP_NAME=Watch1 Media Server
VITE_APP_VERSION=1.0.0
